<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ApiKotlin" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/bg_purple</item>
        <!-- Customize your theme here. -->

<!--        <item name="textInputStyle"></item>-->
    </style>

    <style name="CustomOutlineBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/outline_border</item>
        <item name="android:textColorHint">@color/grey_outline</item>
        <item name="hintTextColor">@color/grey_outline</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="cornerRadius">4dp</item>
        <item name="android:textColor">@color/grey_outline</item>

    </style>

    <style name="ButtonSignIn" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/orange</item>
        <item name="cornerRadius">4dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="ButtonSignUp" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/bg_purple</item>
        <item name="strokeColor">@color/grey_outline</item>
        <item name="cornerRadius">4dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@color/orange</item>
    </style>


    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/bg_purple</item>
    </style>


</resources>